{
	"name": "@magikcraft/server",
	"version": "0.0.0",
	"description": "Server utilities for SMA plugins",
	"homepage": "https://www.magikcraft.io",
	"author": {
		"name": "Josh Wulf",
		"email": "josh@magikcraft.io",
		"url": "https://github.com/jwulf"
	},
	"files": [
		"generators"
	],
	"main": "lib/index.js",
	"keywords": [
		"scriptcraft",
		"magikcraft",
		"minecraft"
	],
	"devDependencies": {
		"@magikcraft/op-all": "^1.0.0",
		"@scriptcraft/types": "^1.0.1",
		"husky": "^1.3.1",
		"lint-staged": "^8.1.5",
		"prettier": "^1.16.4"
	},
	"engines": {
		"npm": ">= 4.0.0"
	},
	"smaPluginConfig": {},
	"husky": {
		"hooks": {
			"pre-commit": "tsc && lint-staged"
		}
	},
	"lint-staged": {
		"*.{ts,json,css,md}": [
			"prettier --write",
			"git add"
		],
		"*.js": [
			"git add"
		],
		"*.json": [
			"prettier --write",
			"git add"
		]
	},
	"eslintConfig": {
		"extends": [
			"xo",
			"prettier"
		],
		"env": {
			"jest": true,
			"node": true
		},
		"rules": {
			"prettier/prettier": "error"
		},
		"plugins": [
			"prettier"
		]
	},
	"scripts": {
		"pretest": "eslint .",
		"test": "jest"
	},
	"repository": "Magikcraft/server-sma",
	"jest": {
		"testEnvironment": "node"
	},
	"license": "Apache-2.0"
}
